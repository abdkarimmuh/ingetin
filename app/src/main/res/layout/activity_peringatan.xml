<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="dev.karim.ingetin.Others.PeringatanActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_sound_berat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Sound" />

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_vibrate_berat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vibrate" />

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_repeat_berat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Repeat" />

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_image_berat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Image" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedang"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_sound_sedang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Sound" />

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_vibrate_sedang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vibrate" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringan"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Switch
                android:padding="10dp"
                android:id="@+id/switch_vibrate_ringan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Vibrate" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
